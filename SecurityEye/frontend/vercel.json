{
  "buildCommand": "echo 'Static HTML site'",
  "outputDirectory": ".",
  "env": {
    "API_URL": "https://a1b2c3d4e5f6g.ngrok.io"
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/templates/login.html"
    },
    {
      "source": "/login",
      "destination": "/templates/login.html"
    },
    {
      "source": "/register",
      "destination": "/templates/login.html"
    },
    {
      "source": "/usuario/(.*)",
      "destination": "/templates/usuario/index.html"
    },
    {
      "source": "/admin/(.*)",
      "destination": "/templates/admin/index.html"
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    }
  ]
}